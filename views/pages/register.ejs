<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Register</title>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap');
    body {
      margin: 0; padding: 0;
      background: #f7f7f5;
      font-family: 'Inter', sans-serif;
      color: #333;
      display: flex;
      flex-direction: column;
      align-items: center;
      min-height: 100vh;
      padding: 60px 16px;
    }
    header {
      width: 100%;
      max-width: 1000px;
      margin-bottom: 48px;
      padding: 12px 24px;
      background: white;
      box-shadow: 0 3px 14px rgba(0,0,0,0.1);
      border-radius: 14px;
    }
    nav {
      display: flex;
      gap: 22px;
      justify-content: center;
      flex-wrap: wrap;
      user-select: none;
    }
    nav a {
      text-decoration: none;
      color: #555;
      font-weight: 600;
      padding: 7px 18px;
      border-radius: 22px;
      background: #eee;
      transition: background-color 0.3s ease, color 0.3s ease;
    }
    nav a:hover {
      background: #b5a26a;
      color: #3f3213;
      box-shadow: 0 0 18px #b5a26a;
    }
    nav span {
      font-weight: 600;
      font-size: 1rem;
      color: #7b6b42;
      user-select: none;
    }
    main {
      max-width: 440px;
      width: 100%;
      padding: 38px 34px;
      background: white;
      border-radius: 20px;
      box-shadow: 0 6px 32px rgba(168, 150, 98, 0.25);
      user-select: none;
    }
    h1 {
      font-size: 2.8rem;
      font-weight: 700;
      text-align: center;
      color: #6e5c31;
      margin-bottom: 30px;
    }
    form {
      display: flex;
      flex-direction: column;
      gap: 24px;
    }
    label {
      font-weight: 600;
      color: #5b4b2e;
      font-size: 1.05rem;
    }
    input {
      border: 1.6px solid #d3c997;
      border-radius: 10px;
      padding: 12px 14px;
      font-size: 1rem;
      transition: border-color 0.3s ease;
    }
    input:focus {
      outline: none;
      border-color: #b9aa66;
      box-shadow: 0 0 8px rgba(185, 170, 102, 0.75);
    }
    button[type="submit"] {
      background-color: #b9aa66;
      padding: 14px 0;
      color: #3b2f0f;
      font-weight: 700;
      font-size: 1.15rem;
      border-radius: 30px;
      cursor: pointer;
      border: none;
      box-shadow: 0 0 18px #b9aa66;
      transition: background-color 0.3s ease, box-shadow 0.3s ease;
    }
    button[type="submit"]:hover {
      background-color: #ccc375;
      box-shadow: 0 0 30px #ccc375;
    }
    @media (max-width: 480px) {
      main {
        padding: 30px 20px;
      }
      h1 {
        font-size: 2rem;
      }
    }
  </style>
</head>
<body>
  <%- include('../partials/header', { user: null }) %>
  <main>
    <h1>Register</h1>
    <form method="POST" action="/auth/register">
      <label>Name</label>
      <input type="text" name="name" required />
      <label>Email</label>
      <input type="email" name="email" required />
      <label>Password</label>
      <input type="password" name="password" required />
      <button type="submit">Register</button>
    </form>
  </main>
</body>
</html>
